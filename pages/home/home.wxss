/* pages/home/home.wxss */

.content {
  display: flex;
  flex-direction: row;
}

.food {
  display: flex;
  justify-content: left;
  flex-direction: row;
  flex-wrap: wrap;
   margin: 10px 5px; 
}

.foodgood {
  height: 560rpx;
  width: 47%;
   margin: 0px auto; 
  position: relative;
  display: inline-block;
  font-size: 24rpx;
}

.food-image {
  width: 150px;
  height: 150px;
  display: inline-block;
  border: 1px #eee solid;
}

.product-name {
  color: #000;
  height: 28px;
  text-align: left;
  margin: 0px 5px;
  margin-bottom: 5px;
}

.product-price-wrap .product-price-new {
  color: #e80080;
  margin-left: 5px;
  font-weight: 900;
}
