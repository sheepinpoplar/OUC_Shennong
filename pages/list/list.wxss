/* pages/list/list.wxss */

page {
  background: #fff;
}

/*总体主盒子*/

.container {
  padding: 0;
  margin: 0;
}

.classify {
  position: fixed;
  top: 0;
  width: 100%;
  height: 25px;
  line-height: 25px;
  margin-left: 5px;
  font-size: 12pt;
  background: #f9f9f9;
  color: #888;
  border-bottom: 1px solid #ddd;
}

.dish_list {
  width: 100%;
  height: 100%;
  margin-top: 30px;
  background: #f5f5f5;
}

.dish_list .dish_list_items {
  width: 100%;
  height: 110px;
  background: #fff;
  border-bottom: 1px solid #ddd;
}

.dish_list .dish_list_items:active {
  background: #f5f5f5;
}

.dish_list_items .dish_image {
  float: left;
  width: 110px;
  height: 100%;
}

.dish_list_items .dish_image image {
  width: 100px;
  height: 100px;
  margin-top: 5px;
  margin-left: 5px;
}

.dish_list_items .dish_content {
  float: right;
  width: 65%;
  height: 100%;
}

.dish_content .dish_content_main {
  float: left;
  width: 70%;
  height: 100%;
  padding-top: 15px;
}

.dish_content_main .dish_content_name {
  display: block;
  font-size: 14pt;
  color: #353535;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.dish_content_main .dish_content_position {
  display: block;
  margin-top: 5px;
  font-size: 11pt;
  color: #d24a58;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.dish_content_main .dish_content_score {
  display: block;
  margin-top: 5px;
  font-size:11pt;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.dish_content_score .full {
  width: 5px;
  color: #09bb07;
}

.dish_content_score .good {
  width: 5px;
  color: #f00;
}

.dish_content_score .common {
  width: 5px;
  color: #f00;
}

.dish_content_score .bad {
  width: 5px;
  color: #f5f5f5;
}

.dish_content .dish_content_price {
  float: right;
  width: 30%;
  height: 100%;
  padding-top: 40px;
  font-size: 14pt;
  color: #f00;
  text-align: center;
}
